          .categories__item-info 
            span Искробезопасный <br> инструмент
            +svg(24, 24, 'arrow-right')
        .categories__item.swiper-slide 
          picture.categories__item-img
            source(srcset="./img/categories/img-03.webp, ./img/categories/img-03@x2.webp" type="webp")
            source(srcset="./img/categories/img-03.jpg, ./img/categories/img-03@x2.jpg" type="jpg")
            img(src="./img/categories/img-03.webp", alt="") 
          .categories__item-info 
            span Промышленная <br> мебель
            +svg(24, 24, 'arrow-right')
        .categories__item.swiper-slide 
          picture.categories__item-img
            source(srcset="./img/categories/img-04.webp, ./img/categories/img-04@x2.webp" type="webp")
